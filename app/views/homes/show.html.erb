        <p class="text-md mb-4 ">Stock : 
            <span class="font-bold">
                <%= @product.stock %>
            </span>
        </p>
        <p class="text-md mb-4">Status : 
            <span class="font-bold">
                <%= @product.status %></p>
            </span>
        </div>
    </div>


</div>