<h1 class="my-6 text-4xl font-bold text-gray-700"> OrderList</h1>
    <table class="table-auto w-full">
        <thead class="bg-gray-400 uppercase">
            <tr>
                <th class="px-3 py-6 text-left" > Address </th>
            </tr>
        </thead>
        <tbody class="text-sm font-light">
        <% @orders.each do |o| %>
            <tr class="border-b bg-gray-100 hover:bg-gray-200">
                <% if o.address != "" %>
                    <td class="px-3 py-6"> <%= o.address %> </td>
                <% end %>
            </tr>
        <% end %>
        </tbody>
    </table>