<%= render 'nav' %>
<%= form_with model: [:admins, category] do |form| %>
  <div class="mb-4">
    <%= form.label :name, class: "text-grey-darker text-sm font-bold mb-2" %><br>
    <%= form.text_field :name,
        class: "shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" %>
    <% category.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="action">
    <%= form.submit "Submit", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
  </div>
<% end %>