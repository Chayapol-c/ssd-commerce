<h2 class="text-gray-darker text-4xl font-bold my-6" >Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field mb-4">
    <%= f.label :email, class: "text-grey-darker text-sm font-bold mb-2" %><br />
    <%= f.email_field :email, 
        autofocus: true, 
        autocomplete: "email",
        class: "shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" %>
  </div>

  <div class="field mb-4">
    <%= f.label :password, class: "text-grey-darker text-sm font-bold mb-2"  %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",
      class: "shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" %>
  </div>

  <div class="field mb-4">
    <%= f.label :password_confirmation , class: "text-grey-darker text-sm font-bold mb-2" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
      class: "shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker"  %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",
    class: "bg-blue-500 hover:bg-blue-dark text-white font-bold py-2 px-4 rounded cursor-pointer" %>
  </div>
    
  <%= render "devise/shared/error_messages", resource: resource %>
<% end %>

