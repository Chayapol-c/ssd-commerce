<h2 class="text-gray-darker text-4xl font-bold my-6" >Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-4">
    <%= f.label :email, class: "text-grey-darker text-sm font-bold mb-2" %><br />
    <%= f.email_field :email, 
        autofocus: true, 
        autocomplete: "email",
        class: "shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" %>
  </div>

  <div class="field mb-4">
    <%= f.label :password, class: "text-grey-darker text-sm font-bold mb-2"  %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",
      class: "shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me,
       class: "text-gray-darker"%>
    </div>
  <% end %>

  <div class="actions mb-4">
    <%= f.submit "Log in",
    class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
