<h1 class="my-6 text-4xl font-bold text-gray-700"> Categories List</h1>
<div class= "my-4">

    <div class="mb-4">
        <%= form_with model: @category do |form| %>
            <%= form.text_field :name,
                class: "shadow appearance-none border rounded py-2 px-3 text-grey-darker" %>
            <%= form.submit "Create", class: "bg-blue-500 border hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
        <% end %>
    </div>

</div>
    <table class="table-auto w-full">
        <thead class="bg-gray-400 uppercase">
            <tr>
                <th class="px-3 py-6 text-left" > Name </th>
                <th class="px-3 py-6 text-center"> Action </th>
            </tr>
        </thead>
        <tbody class="text-sm font-light">
        <% @categories.each do |c| %>
            <tr class="border-b bg-gray-100 hover:bg-gray-200">
                <td> <%= c.name %> </td>
                <td> 
                    <%= link_to "Show", category_path(c) %> 
                    <%= link_to "Delete", category_path(c), method: :delete %> 
                </td>

            </tr>
        <% end %>
        </tbody>
    </table>